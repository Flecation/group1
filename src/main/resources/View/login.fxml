<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" stylesheets="@../CSS/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IPPSystem.Controllers.loginController">
   <children>
      <HBox alignment="TOP_RIGHT" maxHeight="35.0" minHeight="35.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="minimizeBtn" maxHeight="35.0" maxWidth="35.0" minHeight="35.0" minWidth="35.0" mnemonicParsing="false" />
            <Button fx:id="restoreBtn" maxHeight="35.0" maxWidth="35.0" minHeight="35.0" minWidth="35.0" mnemonicParsing="false" />
            <Button fx:id="exitBtn" maxHeight="35.0" maxWidth="35.0" minHeight="35.0" minWidth="35.0" mnemonicParsing="false" />
         </children></HBox>
      <HBox alignment="CENTER_RIGHT" maxHeight="365.0" maxWidth="600.0" minHeight="365.0" minWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" maxHeight="300.0" maxWidth="270.0" minHeight="300.0" minWidth="270.0" styleClass="cardPane">
               <children>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="267.0" styleClass="loginTitle" text="Login">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin></Label>
                  <StackPane maxHeight="80.0" minHeight="80.0" prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="userNameTxt" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" />
                        <Label fx:id="userNameLbl" text="Username" StackPane.alignment="CENTER_LEFT">
                           <StackPane.margin>
                              <Insets left="20.0" />
                           </StackPane.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </StackPane>
                  <StackPane maxHeight="80.0" minHeight="80.0">
                     <children>
                        <TextField fx:id="showPasswordTxt" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" StackPane.alignment="CENTER" />
                        <PasswordField fx:id="hidePasswordTxt" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" StackPane.alignment="CENTER" />
                        <Label fx:id="passwordLbl" text="Passowrd" StackPane.alignment="CENTER_LEFT">
                           <StackPane.margin>
                              <Insets left="20.0" />
                           </StackPane.margin></Label>
                        <CheckBox fx:id="showPasswordCheckBox" mnemonicParsing="false" text="Show Password" StackPane.alignment="BOTTOM_LEFT">
                           <StackPane.margin>
                              <Insets left="20.0" top="10.0" />
                           </StackPane.margin>
                        </CheckBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </StackPane>
                  <Button fx:id="loginBtn" maxHeight="25.0" maxWidth="210.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="229.0" text="Login" />
                  <Button fx:id="forgetBtn" mnemonicParsing="false" text="forget password">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Button>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" right="20.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding></VBox>
         </children>
      </HBox>
   </children>
</VBox>
